{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost,1433; Initial Catalog=restaurante;User Id=sa;Application Name=restaurante;MultipleActiveResultSets=true;"
  },
  "HealthChecks-UI": {
    "HealthChecks": [
      {
        "Name": "API Restaurante",
        "Uri": "https://localhost:44320/hc"
      }
    ]
  },
  "AppSettings": {
    "Secret": "X-BURGUER@COCA-2",
    "ExpiracaoHoras": 2,
    "Emissor": "Restaurante",
    "ValidoEm": "https://localhost"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": true,
    "RealIPHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/*",
        "Period": "1s",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "1m",
        "Limit": 180
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "1h",
        "Limit": 10800
      }
    ]
  },
  "RedisCacheSettings": {
    "Enabled": true,
    "ConnectionString": "localhost",
    "InstanceName": "master",
    "DefaultSeconds": 60
  }
}
